<div class="d-flex gap-2 align-items-center form-inline">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="nav-item ">
            <a class="nav-link text-white" asp-controller="Home" asp-action="Index" title="Welcome">
                Welcome @User.Identity.Name
            </a>
        </div>

        <div class="nav-item">
        </div>

        <div class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="btn btn-secondary text-white">Logout</button>
            </form>
        </div>
    }
    else
    {
        <div class="nav-item">
            <a class="btn btn-secondary" asp-controller="LoginRegister" asp-action="Signup">Signup</a>
        </div>

        <div class="nav-item">
            <a class="btn btn-primary" asp-controller="LoginRegister" asp-action="Login">Login</a>
        </div>
    }
</div>
