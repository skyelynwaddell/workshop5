@model TravelExpertsGUI.Models.RegisterViewModel
@{
    ViewData["Title"] = "Signup";
}
<h2 class="display-3">Register</h2>
<hr />
<form asp-action="Signup" class="bg-dark p-3" method="post">
    <div class="form-group">
        <label asp-for="CustFirstName" class="control-label text-white">First Name:</label>
        <input asp-for="CustFirstName" class="form-control" placeholder="First Name..." />
        <span asp-validation-for="CustFirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustLastName" class="control-label text-white">Last Name:</label>
        <input asp-for="CustLastName" class="form-control" placeholder="Last Name..." />
        <span asp-validation-for="CustLastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustAddress" class="control-label text-white">Address:</label>
        <input asp-for="CustAddress" class="form-control" placeholder="Address..." />
        <span asp-validation-for="CustAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustCity" class="control-label text-white">City:</label>
        <input asp-for="CustCity" class="form-control" placeholder="City..." />
        <span asp-validation-for="CustCity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustProv" class="control-label text-white">Province:</label>
        <input asp-for="CustProv" class="form-control" placeholder="Province..." />
        <span asp-validation-for="CustProv" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustPostal" class="control-label text-white">Postal Code:</label>
        <input asp-for="CustPostal" class="form-control" placeholder="Postal Code..." />
        <span asp-validation-for="CustPostal" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustCountry" class="control-label text-white">Country:</label>
        <input asp-for="CustCountry" class="form-control" placeholder="Country..." />
        <span asp-validation-for="CustCountry" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustHomePhone" class="control-label text-white">Home Phone:</label>
        <input asp-for="CustHomePhone" class="form-control" placeholder="Home Phone..." />
        <span asp-validation-for="CustHomePhone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustBusPhone" class="control-label text-white">Business Phone:</label>
        <input asp-for="CustBusPhone" class="form-control" placeholder="Business Phone..." />
        <span asp-validation-for="CustBusPhone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustEmail" class="control-label text-white">Email:</label>
        <input asp-for="CustEmail" type="email" class="form-control" placeholder="Email..." />
        <span asp-validation-for="CustEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustUsername" class="control-label text-white">Username:</label>
        <input asp-for="CustUsername" class="form-control" placeholder="Username..." />
        <span asp-validation-for="CustUsername" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustPassword" class="control-label text-white">Password:</label>
        <input asp-for="CustPassword" type="password" class="form-control" placeholder="Password..." />
        <span asp-validation-for="CustPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label text-white">Confirm Password:</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password..." />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group text-center d-flex col">
        <button type="submit" class="btn btn-primary">Register</button>
        <button type="reset" class="btn btn-primary">Reset</button>

        <span class="text-white">or Already have an account? 
        <a class="text-white" asp-controller="Account" asp-action="Login">Login</a></span>
    </div>
</form>
