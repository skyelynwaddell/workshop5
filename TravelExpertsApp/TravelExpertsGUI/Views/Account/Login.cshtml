@model TravelExpertsData.Customer
@{
    ViewData["Title"] = "Login";
}

<h2 class="display-3">Login</h2>
<hr/>
<form class="bg-dark p-2" asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="CustUsername" class="control-label text-white">Username:</label>
        <input asp-for="CustUsername" class="form-control" placeholder="Username..." />
        <span asp-validation-for="CustUsername" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustPassword" class="control-label text-white">Password:</label>
        <input asp-for="CustPassword" class="form-control" type="password" placeholder="Password..." />
        <span asp-validation-for="CustPassword" class="text-danger"></span>
    </div>
    <div class="form-group text-center d-flex col">
        <button type="submit" class="btn btn-primary">Login</button>
        <span class="text-white"> or <a asp-controller="Account" asp-action="Signup" class="text-white">Create an account</a></span>
    </div>
</form>
